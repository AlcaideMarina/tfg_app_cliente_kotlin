<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.views.main.MainActivity" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <LinearLayout
            android:id="@+id/company_text_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/company_text_view"
            android:layout_marginTop="@dimen/size8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Empresa:" />

            <com.example.hueverianietoclientes.ui.components.HNTextInputLayout
                android:id="@+id/company_text_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/size16"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/direction_text_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/size16"
            app:layout_constraintTop_toBottomOf="@id/company_text_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/direction_text_view"
                android:layout_marginTop="@dimen/size8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Dirección:" />

            <com.example.hueverianietoclientes.ui.components.HNTextInputLayout
                android:id="@+id/direction_text_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/size16"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/city_text_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/size16"
            app:layout_constraintTop_toBottomOf="@id/direction_text_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/city_text_view"
                android:layout_marginTop="@dimen/size8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Ciudad:" />

            <com.example.hueverianietoclientes.ui.components.HNTextInputLayout
                android:id="@+id/city_text_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/size16"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/province_text_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/size16"
            app:layout_constraintTop_toBottomOf="@id/city_text_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/province_text_view"
                android:layout_marginTop="@dimen/size8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Provincia:" />

            <com.example.hueverianietoclientes.ui.components.HNTextInputLayout
                android:id="@+id/province_text_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/size16"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/postal_code_text_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/size16"
            app:layout_constraintTop_toBottomOf="@id/province_text_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/postal_code_text_view"
                android:layout_marginTop="@dimen/size8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Código postal:" />

            <com.example.hueverianietoclientes.ui.components.HNTextInputLayout
                android:id="@+id/postal_code_text_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/size16"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cif_text_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/size16"
            app:layout_constraintTop_toBottomOf="@id/postal_code_text_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/cif_text_view"
                android:layout_marginTop="@dimen/size8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="CIF:" />

            <com.example.hueverianietoclientes.ui.components.HNTextInputLayout
                android:id="@+id/cif_text_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/size16"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/phone_text_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/size16"
            app:layout_constraintTop_toBottomOf="@id/cif_text_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/phone_text_view"
                android:layout_marginTop="@dimen/size8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Teléfono:" />

            <LinearLayout
                android:id="@+id/phone_text_input_layout_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false" >

                <com.example.hueverianietoclientes.ui.components.HNTextInputLayout
                    android:id="@+id/phone_text_input_layout_name_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="16dp" />

                <com.example.hueverianietoclientes.ui.components.HNTextInputLayout
                    android:id="@+id/phone_text_input_layout_phone_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="16dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/phone_text_input_layout_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false" >

                <com.example.hueverianietoclientes.ui.components.HNTextInputLayout
                    android:id="@+id/phone_text_input_layout_name_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="16dp" />

                <com.example.hueverianietoclientes.ui.components.HNTextInputLayout
                    android:id="@+id/phone_text_input_layout_phone_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="16dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_text_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/size16"
            app:layout_constraintTop_toBottomOf="@id/phone_text_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/user_text_view"
                android:layout_marginTop="@dimen/size8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Usuario:" />

            <com.example.hueverianietoclientes.ui.components.HNTextInputLayout
                android:id="@+id/user_text_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/size16" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/email_text_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/size16"
            app:layout_constraintTop_toBottomOf="@id/user_text_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/email_text_view"
                android:layout_marginTop="@dimen/size8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Correo:" />

            <com.example.hueverianietoclientes.ui.components.HNTextInputLayout
                android:id="@+id/email_text_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/size16"/>

        </LinearLayout>

        <TextView
            android:id="@+id/no_changes_allowed_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lamentablemente, no está permitida la modificación de los datos de su perfil. Si desean modificar alguno, por favor, llámenos a Huevería Nieto, y estaremos encantados de atenderle."
            android:layout_marginTop="32dp"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/email_text_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
